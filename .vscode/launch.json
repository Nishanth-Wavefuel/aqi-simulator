    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server - Development",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.ts",
            "runtimeArgs": ["--loader", "ts-node/esm"],
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}